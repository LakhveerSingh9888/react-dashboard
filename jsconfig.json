{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@pages/*": ["./src/pages/*"],
      "@utils/*": ["./src/utils/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@store/*": ["./src/store/*"],
      "@assets/*": ["./src/assets/*"],
      "@router/*": ["./src/router/*"],
      "@locales/*": ["./src/locales/*"]
    },
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "module": "esnext",
    "allowImportingTsExtensions": false,
    "checkJs": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

